# WildGuard 4.0 - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://wildguard:your_password@localhost:5432/wild_guard_db

# For Railway/Cloud:
# DATABASE_URL=postgresql://user:pass@host.railway.internal:5432/dbname

# =============================================================================
# AI SERVICE URLS
# =============================================================================
# Local Development:
TENSORFLOW_SERVICE_URL=http://localhost:5001
POACHING_SERVICE_URL=http://localhost:5002
INJURY_SERVICE_URL=http://localhost:5004

# Production (Railway internal URLs):
# TENSORFLOW_SERVICE_URL=http://wildguard-tensorflow.railway.internal:5001
# POACHING_SERVICE_URL=http://wildguard-poaching.railway.internal:5002
# INJURY_SERVICE_URL=http://wildguard-injury.railway.internal:5004

# =============================================================================
# API KEYS (All FREE - See DEPLOYMENT_GUIDE.md for instructions)
# =============================================================================

# Google Gemini AI (FREE)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek AI (FREE $10 credit)
# Get from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# iNaturalist (Optional, FREE)
# Get from: https://www.inaturalist.org/oauth/applications/new
INATURALIST_API_KEY=your_inaturalist_key_here

# PlantNet (Optional, FREE)
# Get from: https://my.plantnet.org/
PLANTNET_API_KEY=your_plantnet_key_here

# =============================================================================
# SESSION & SECURITY
# =============================================================================
# Generate random 64-character string for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_your_secure_random_secret_here

# Admin credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=5000

# Frontend URL (important for CORS)
CLIENT_URL=https://your-frontend-domain.vercel.app

# Backend URL
SERVER_URL=https://your-backend-domain.railway.app

# =============================================================================
# OPTIONAL: PAYMENT INTEGRATION
# =============================================================================
# Razorpay (for donations)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# =============================================================================
# OPTIONAL: EMAIL NOTIFICATIONS
# =============================================================================
# SMTP Configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@wildguard.com

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
DB_PASSWORD=wildguard_secure_password_change_this
PGADMIN_PASSWORD=admin_change_this

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. NEVER commit this file with real values to Git
# 2. Use Railway/Vercel environment variable UI for production
# 3. Rotate secrets regularly (every 90 days)
# 4. Use strong passwords (20+ characters, mixed case, symbols)
# 5. Enable 2FA on all service accounts
